{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "2.0",
  "description": "Download YouTube videos easily via a remote server.",
  "permissions": ["activeTab", "storage", "notifications"],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
